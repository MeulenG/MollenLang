behavior _Greeting {
    action _greet(string _name) {
        print("Hello, " + _name);
    }
}

behavior _Farewell {
    action _sayGoodbye(string _name) {
        print("Goodbye, " + _name);
    }
}

object _socialBot inherits _Greeting, _Farewell;

_socialBot._greet("Alice");     // Outputs: Hello, Alice
_socialBot._sayGoodbye("Bob");  // Outputs: Goodbye, Bob